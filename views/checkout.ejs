<head>
    <title>Checkout Page</title>
</head>

<body>
    <form action="/api/attendants/<%= user_id %>/pay" method="post">
        <div>
            <!-- Store Name -->
            <h1>Fast Parking System</h1>

            <!-- Attendant -->
            <label for="attendant_name">Attendant:</label>
            <input type="text" id="attendant_name" name="attendant_name" value="<%= attendant_name %>" disabled>

            <br><br>

            <!-- Location -->
            <label for="location">Location:</label>
            <input type="text" id="location" name="location" value="<%= location %>" disabled>

            <br><br>

            <!-- Nominal -->
            <label for="nominal">Nominal:</label>
            <input type="number" id="nominal" name="nominal" value="<%= nominal %>" disabled>

            <br><br>

            <!-- Submit Button -->
            <button type="submit">Pay</button>
        </div>
    </form>
</body>